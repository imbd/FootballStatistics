<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.imbd.footballstats">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_lch"
        android:label="FootballStats"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        <activity
            android:name=".MainActivity"
            android:label="FootballStats"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChoosingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TeamActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PlayerStatsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ChampStatsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".MatchActivity"
            android:label="@string/title_activity_match"
            android:theme="@style/NoActionBar" />
        <activity android:name=".GraphActivity" />
        <activity android:name=".ChartActivity" />
        <activity android:name=".PieChartsActivity" />
        <activity android:name=".StatsActivity" />
        <activity android:name=".ChampStatisticsActivity" />
        <activity android:name=".TeamPlayerStatsActivity" />
        <activity android:name=".ScheduleActivity" />
    </application>

</manifest>
